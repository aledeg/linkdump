{
  "applications": {
    "gecko": {
      "id": "{c72c9666-1bfa-4558-ab70-44cb09caaac6}"
    }
  },

  "manifest_version": 2,
  "name": "LinkDump",
  "version": "1.8",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "48": "icons/linkdump-48.png"
  },

  "permissions": [
    "activeTab",
    "bookmarks",
    "clipboardWrite",
    "downloads",
    "menus",
    "notifications",
    "storage",
    "tabs"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/linkdump-16.png",
      "32": "icons/linkdump-32.png"
    },
    "default_title": "LinkDump",
    "default_popup": "popup/load.content.html"
  },

  "page_action": {
    "default_icon": "icons/linkdump-32.png",
    "default_title": "__MSG_menuAddToDump__",
    "show_matches": ["<all_urls>"]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["background.js"]
  },

  "default_locale": "en"
}
